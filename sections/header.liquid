  opacity: 0;
  pointer-events: none;
  display: none;
}

.header__submenu[aria-hidden="false"] {
  opacity: 1;
  pointer-events: all;
}


.header__submenu .list-menu {
  padding: 1rem 0;
  position: relative;
  display: flex;
  flex-direction: row;
}


@media only screen and (min-width: 975px) {
  .header__submenu .header__menu-item {
    display: block;
    margin-left: var(--level4);
    padding-left: 0;
    padding-bottom: 0;
  }

  .header__submenu .header__menu-item {
    margin-right: var(--level6);
    padding-right: var(--level1);
    padding-top: var(--level2);
    font-size: var(--normal);
    letter-spacing: var(--letter-spacing-2);
  }

  .header__submenu .header__menu-item:after {
    width: 100%;
    content: " ";
    background-color: #fff;
    position: absolute;
    height: 2px;
    bottom: -.25rem;
    left: 0;
    width: 0;
    transition: all var(--duration-default) ease;
  }

  .header__submenu .header__menu-item:hover:after,
  .header__submenu .header__menu-item:focus:after {
    width: 100%;
  }
}



