  transition: all .4s cubic-bezier(0.165, 0.84, 0.44, 1) 0s;
  background: linear-gradient(to top, transparent 0%, rgb(0, 0, 0) 100%);
}


.menu-drawer.is-open {
  transform: translateY(0);
  pointer-events: all;
}


.menu-drawer.is-open .menu-drawer__menu {
  opacity: 1;
}

