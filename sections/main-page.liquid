
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

<style>
  .main-page-section {
    padding-bottom: var(--level2);
  }

  .main-page {
    padding-right: var(--level6);
    padding-left: var(--level6);
    max-width: 60rem;
    padding-top: calc(var(--level7) * 3);
  }

  @media screen and (min-width: 975px) {
    .main-page {
      padding-top: calc(var(--level7) * 3.5);
    }
  }
  
  @media screen and (min-width: 380px) {
    .main-page {
      padding-right: var(--level7);
      padding-left: var(--level7);
    }
  }
  
  @media screen and (min-width: 775px) {
    .main-page {
      padding-top: calc(var(--level6) * 4);
      margin-right: auto;
      margin-left: calc(var(--level7)  * 2);
    }
  }

  .main-page .rte a {
    color: #f1de4f;
  }


  .main-page h1 {
    font-family: var(--primary-font-family);
    font-size: var(--h4); 
    letter-spacing: var(--letter-spacing-1);
    text-transform: uppercase;
  }
  .page-title {
    margin-top: 0;
  }
  
  .main-page-title {
    margin-bottom: var(--level3);
  }
  
  @media screen and (min-width: 750px) {
    .main-page-title {
      margin-bottom: var(--level5);
    }
  }
  
  .page-placeholder-wrapper {
    display: flex;
    justify-content: center;
  }
  
  .page-placeholder {
    width: 52.5rem;
    height: 52.5rem;
  }
  
</style>

<div class="main-page  ">
  <h1 class="main-page-title page-title ">
    {{ page.title | escape }}
  </h1>
  <div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "spaced-section  main-page-section"
}
{% endschema %}
